<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agua1"
    android:padding="16dp">


    <RelativeLayout
        android:id="@+id/loginContainer"
        android:layout_width="341dp"
        android:layout_height="541dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_fundo"
        android:padding="24dp">
        <!-- TextView para Leitura Atual -->
        <TextView
            android:id="@+id/leitura11"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:text="Leitura atual"
            android:textSize="20sp" />

        <!-- EditText para Leitura Atual -->
        <EditText
            android:id="@+id/leitura1"
            style="@style/transparencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leitura11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- TextView para Leitura Anterior -->
        <TextView
            android:id="@+id/leitura21"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leitura1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:text="Leitura Anterior"
            android:textSize="20sp" />

        <!-- EditText para Leitura Anterior -->
        <EditText
            android:id="@+id/leitura2"
            style="@style/transparencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leitura21"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <!-- TextView para Consumo -->
        <TextView
            android:id="@+id/resultconsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/leitura2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="CONSUMIDO:"
            android:textColor="#FFFFFF" />

        <!-- TextView para Resultado Final -->
        <TextView
            android:id="@+id/resultadofinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultconsum"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Resultado:"
            android:textColor="#FFFFFF" />

        <!-- Button para Calcular -->
        <Button
            android:id="@+id/Calcular"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resultadofinal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:text="Converter"
            android:textSize="18sp" />

        <!-- Button para Lista de Consumo -->
        <Button
            android:id="@+id/listaconsumo"
            style="@style/BlueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Calcular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:text="Lista de consumo"
            android:textSize="18sp" />

        <!-- ListView para Exibir Dados -->

    </RelativeLayout>

</RelativeLayout>
