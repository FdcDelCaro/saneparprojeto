<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agua5"
    tools:context=".Menu">

    <RelativeLayout
        android:id="@+id/loginContainer"
        android:layout_width="363dp"
        android:layout_height="433dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_fundo"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/consumo_acessorios"

            style="@style/BlueButton"
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="202dp"
            android:background="@drawable/texto_fundo_login"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:drawableBottom="@color/black"
            android:text="Consumos por equipamento "
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintVertical_bias="0.521" />

        <Button
            android:id="@+id/leitura"

            style="@style/BlueButton"
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="332dp"

            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:text="Leitura Hidrometro"

            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.233"
            android:layout_marginTop="13dp"
            android:background="@drawable/texto_fundo_login"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/list"

            style="@style/BlueButton"
            android:layout_width="317dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="74dp"
            android:background="@drawable/texto_fundo_login"
            android:drawableLeft="@drawable/baseline_water_drop_24"
            android:drawableBottom="@color/black"
            android:text="HistÃ³rico de consumo"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.521" />

    </RelativeLayout>

    <Button
        android:id="@+id/sair"
        style="@style/BlueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_water_drop_24"
        android:text="Sair"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.951"
        android:layout_marginTop="24dp"
        android:background="@drawable/texto_fundo_login"

        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView"
        style="@style/BlueButton"
        android:layout_width="413dp"
        android:layout_height="65dp"
        android:drawableLeft="@drawable/baseline_water_drop_24"
        android:text="LEITURAS GERAIS"

        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        android:layout_marginTop="24dp"
        android:background="@drawable/texto_fundo_login"


        android:textColor="#FFFFFF" />



</androidx.constraintlayout.widget.ConstraintLayout>